<% include partials/header %>

<div style="margin-top: 20px;"></div>
<div class="container">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-4">
                <form class="form-inline" role='form' action="/donors" method="POST">
                    <label class="form-label">Select Blood Group: </label>
                    <select name="blood_group" class="form-control">
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                    </select>
                    <br>
                    <button class="btn btn-success">Check Availability</button>
                </form>
                <br>
            <div class="col-md-1"></div>
        </div>
    </div>
    
    <div class="container">
        <div class="row">
            <h1><span class="badge badge-dark">Donors</span></h1>
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <a href="#"><%= donors.blood_group %></a>
                <table class="ui single line table">
                    <thead>
                    <th>Name</th>
                    <th>Email Address</th>
                    <th>Date Of Birth</th>
                    <th>Gender</th>
                    <th>Blood Group</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Contact Number</th>
                    </thead>
                    <% donors.forEach(function(donor){ %>
                        <tr>
                            <td><%= donor.first_name + " " + donor.last_name %></td>
                            <td><%= donor.email_address %></td>
                            <td><%= donor.date_of_birth.toLocaleDateString() %></td>
                            <td><%= donor.gender %></td>
                            <td><%= donor.blood_group %></td>
                            <td><%= donor.donor_address %></td>
                            <td><%= donor.donor_city %></td>
                            <td><%= donor.contact_number %></td>
                        </tr>
                        <% }); %>
                </table>
            </div>
        </div>
    </div>
    <br><br><br>
    <a href="users/bloodRequest" class="btn btn-primary">Request for the Specific Blood</a>   