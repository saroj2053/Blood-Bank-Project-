<% include layout/header %>

<div style="margin-top: 24px;"></div>
<div class="container form_alignment">
    <h3 style="color: #660000; text-align: center;">Edit <%= employee.first_name.toUpperCase() %></h3>
    <hr color="#660000">
    <form action="/employees/<%= employee._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="firstName">Firstname:</label>
            <input type="text" name="employee[first_name]" id="firstName" class="form-control" value="<%= employee.first_name %>" required="true">
        </div>
        <div class="form-group">
            <label for="middleName">Middlename:</label>
            <input type="text" name="employee[middle_name]" id="middleName" class="form-control" value="<%= employee.middle_name %>" placeholder="Middle Name">
        </div>
        <div class="form-group">
            <label for="middleName">Lastname:</label>
            <input type="text" name="employee[last_name]" id="lastName" class="form-control" value="<%= employee.last_name %>" required="true">
        </div>
        <div class="form-group">
            <label>Username:</label>
            <input type="text" name="employee[username]" class="form-control" value="<%= employee.username %>" required="true">
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input type="password" name="employee[password]" class="form-control" value="<%= employee.password %>" required="true">
        </div>
        <div class="form-group">
            <label>Date of Birth:</label>
            <input type="text" name="employee[date_of_birth]" class="form-control" value="<%= employee.date_of_birth %>" required="true">
        </div>
        <div class="form-group">
            <label for="designation">Designation:</label>
            <input type="text" name="employee[designation]" id="designation" class="form-control" value="<%= employee.designation %>" required="true">
        </div>
        <div class="form-group">
            <label for="mobile">Mobile:</label>
            <input type="number" min="0" max="10000000000" name="employee[contact_number]" class="form-control" value="<%= employee.contact_number %>" required="true">
        </div>
        <div class="form-group">
            <button type="submit" style="background-color: #660000; color: #fff;" class=" form-control btn btn-md" name="submit">Update</button>
        </div>
    </form>
</div>

<% include layout/footer %>